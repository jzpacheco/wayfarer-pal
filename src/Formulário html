<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulário de Destino</title>
</head>
<body>

<h2>Formulário de Destino</h2>

<form id="destinoForm">
    <label for="nomeDestino">Nome do Destino:</label>
    <input type="text" id="nomeDestino" name="nomeDestino" required><br>

    <label for="local">Local:</label>
    <input type="text" id="local" name="local" required><br>

    <label for="imagem">Imagem (URL):</label>
    <input type="url" id="imagem" name="imagem" required><br>

    <label for="pontoTuristico">Ponto Turístico:</label>
    <input type="text" id="pontoTuristico" name="pontoTuristico">
    <button type="button" onclick="adicionarPonto()">Adicionar Ponto</button><br>

    <ul id="listaPontos"></ul>

    <input type="submit" value="Enviar">
</form>

<script>
    function adicionarPonto() {
        var pontoInput = document.getElementById('pontoTuristico');
        var listaPontos = document.getElementById('listaPontos');
        var novoPonto = document.createElement('li');
        novoPonto.appendChild(document.createTextNode(pontoInput.value));
        listaPontos.appendChild(novoPonto);
        pontoInput.value = '';
    }
</script>

